  page {
    padding-bottom: 90rpx;
  }

  .CartPic {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    left: calc(50% - 49px/2 + 1.12px);
    top: -80rpx;
    border-radius: 16rpx;
  }

  .CartText {
    position: absolute;
    width: 98rpx;
    height: 20rpx;
    left: calc(50% - 49px/2 + 1.12px);
    top: 10rpx;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: 600;
    font-size: 24rpx;
    line-height: 34rpx;
    display: flex;
    align-items: center;
    text-align: center;
    color: #1D1D38;
  }

  .ShopPic {
    position: relative;
    width: 45rpx;
    height: 40rpx;
    left: 0rpx;
    top: 70rpx;
    background: #E47F10;
  }

  .cart_content {
    position: relative;
    top: 100rpx;
  }

  .cart_content .cart_title {
    position: relative;
    padding: 20rpx;
    font-size: 36rpx;
    color: var(--themeColor);
    left: 20rpx;
    border-top: 1rpx solid currentColor;
    border-bottom: 1rpx solid currentColor;
  }

  .CartDelete {
    position: relative;
    left: 500rpx;
    top: -55rpx;
    height: 30rpx;
    width: 30rpx;
    opacity: 0.7;
  }

  .goToPay {
    position: relative;
    padding: 20rpx;
    font-size: 36rpx;
    color: var(--themeColor);
    left: 550rpx;
    top: -120rpx;
  }

  .cart_main {
    height: calc (100vh - 90rpx);
  }

  .CartsGroup {
    display: flex;
    /* padding: 10rpx; */
    border-bottom: 1rpx solid #ccc;
    width: 750rpx;
    height: 154rpx;
  }

  .orderProdNome {
    display: flex;
    position: relative;
    left: 234rpx;
    top: 0rpx;
    color: #666;
  }

  .orderProdImg {
    position: relative;
    height: 146rpx;
    top: 1rpx;
    left: -259rpx;
  }

  .orderProdQuantity {
    position: relative;
    left: -105rpx;
    top: -4rpx;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 36rpx;
    line-height: 50rpx;
    display: flex;
    align-items: center;
    text-transform: lowercase;
    color: #1D1D38;
  }

  .orderProdPrice {
    position: relative;
    left: -189rpx;
    top: -4rpx;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 36rpx;
    line-height: 50rpx;
    display: flex;
    align-items: center;
    text-transform: lowercase;
    color: #1D1D38;
  }

  .orderProdTotPrice {
    position: relative;
    left: 54rpx;
    top: -39rpx;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 36rpx;
    line-height: 50rpx;
    align-items: center;
    text-transform: lowercase;
    color: #1D1D38;
  }

  .footer_tool {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    border-top: 1rpx solid #ccc;
  }

  .footer_tool .all_chk_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer_tool .total_price_wrap {
    flex: 5;
    padding-right: 15rpx;
    text-align: right;
  }

  .footer_tool .total_price_wrap .total_price .total_price_text {
    color: var(--themeColor);
    font-size: 34rpx;
    font-weight: 600;
  }

  .footer_tool .order_pay_wrap {
    flex: 3;
    background-color: var(--themeColor);
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
  }